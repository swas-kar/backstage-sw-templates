app:
  name: {{app_name}}
  environment: {{app_env}}

{{#if use_any}}
anyOptionEnabled: true
{{else}}
anyOptionEnabled: false
{{/if}}

features:
{{#if features.logging}}
  logging: enabled
{{/if}}

{{#if features.monitoring}}
  monitoring: enabled
{{/if}}

{{#if features.dockerfile}}
  dockerfile: included
{{/if}}

{{#if features.gitignore}}
  gitignore: included
{{/if}}

{{#if features.postgresql}}
  database: PostgreSQL
{{else if features.sqlite}}
  database: SQLite
{{else}}
  database: None
{{/if}}

{{#if features.auth}}
  authentication: enabled
{{/if}}

{{#if features.cors}}
  cors: enabled
{{/if}}

{{#if features.swagger}}
  swagger: included
{{/if}}

{{#if features.tests}}
  unitTests: included
{{/if}}

{{#if features.ci}}
  ciPipeline: enabled
{{/if}}

{{#if features.rate_limit}}
  rateLimiting: enabled
{{/if}}

{{#if features.request_id}}
  requestIdMiddleware: enabled
{{/if}}

{{#if features.env_file}}
  envTemplate: included
{{/if}}

{{#if features.https_redirect}}
  httpsRedirect: forced
{{/if}}

# Debug/validation section
debug:
  appNamePresent: {{#if app_name}}true{{else}}false{{/if}}
  environmentIsProd: {{#if (eq app_env "prod")}}true{{else}}false{{/if}}
